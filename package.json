{
  "name": "zeevo-docs",
  "description": "Documentation for the Zeevo platform",
  "version": "0.0.1",
  "engines": {
    "node": ">=16.15.0"
  },
  "browserslist": [
    ">=1%",
    "not ie 11",
    "not op_mini all"
  ],
  "repository": "https://github.com/zeevoco/zeevo-docs/",
  "license": "MIT",
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "hugo": "exec-bin node_modules/.bin/hugo/hugo",
    "hugo:new": "npm run hugo -- new",
    "hugo:server": "npm run hugo -- server",
    "prestart": "npm run clean",
    "start": "npm run hugo:server -- --bind=0.0.0.0 --disableFastRender",
    "prebuild": "npm run clean",
    "build": "npm run hugo -- --gc --minify",
    "build:preview": "npm run build -- -D -F",
    "clean": "rimraf public resources",
    "lint": "run-p lint:*",
    "lint:scripts": "eslint . --ignore-path .gitignore",
    "lint:styles": "stylelint \"assets/scss/**/*.{css,scss}\" --ignore-path .gitignore",
    "test": "npm run -s lint",
    "postinstall": "hugo-installer --version hugoinstaller.version --extended --destination node_modules/.bin/hugo",
    "version": "auto-changelog && git add CHANGELOG.md"
  },
  "dependencies": {
    "@docsearch/css": "3.1.0",
    "@docsearch/js": "3.1.0",
    "@popperjs/core": "2.11.5",
    "bootstrap": "5.1.3",
    "hugo-flexsearch": "1.0.2",
    "plausible-tracker": "0.3.8"
  },
  "devDependencies": {
    "@babel/cli": "^7.17.10",
    "@babel/core": "^7.18.2",
    "@babel/eslint-parser": "^7.18.2",
    "@babel/eslint-plugin": "^7.17.7",
    "@babel/preset-env": "^7.18.2",
    "@fullhuman/postcss-purgecss": "^4.1",
    "auto-changelog": "^2.4.0",
    "autoprefixer": "^10.4",
    "clipboard": "^2.0",
    "eslint": "^8.17.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-markdown": "^2.2.1",
    "eslint-plugin-prettier": "^4.0.0",
    "exec-bin": "^1.0.0",
    "highlight.js": "^11.5",
    "hugo-installer": "^3.1",
    "instant.page": "^5.1",
    "katex": "^0.15",
    "lazysizes": "^5.3",
    "markdownlint-cli2": "^0.4.0",
    "netlify-plugin-submit-sitemap": "^0.3.0",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4",
    "postcss-cli": "^9.1",
    "prettier": "^2.6.2",
    "prettier-plugin-go-template": "^0.0.13",
    "prettier-plugin-toml": "^0.3.1",
    "purgecss-whitelister": "^2.4.0",
    "rimraf": "^3.0.2",
    "stylelint": "^14.9.0",
    "stylelint-config-prettier-scss": "^0.0.1",
    "stylelint-config-standard-scss": "^4.0.0"
  },
  "hugoinstaller": {
    "version": "0.100.2"
  },
  "auto-changelog": {
    "package": true,
    "sortCommits": "date-desc",
    "unreleasedOnly": true,
    "commitLimit": false
  },
  "babel": {
    "presets": [
      [
        "@babel/preset-env"
      ]
    ]
  },
  "prettier": {
    "plugins": [
      "./node_modules/prettier-plugin-toml",
      "./node_modules/prettier-plugin-go-template"
    ],
    "overrides": [
      {
        "files": "*.html",
        "options": {
          "parser": "go-template"
        }
      }
    ]
  },
  "eslintConfig": {
    "root": true,
    "parser": "@babel/eslint-parser",
    "parserOptions": {
      "sourceType": "module",
      "ecmaVersion": "latest"
    },
    "plugins": [
      "@babel",
      "markdown"
    ],
    "extends": "plugin:prettier/recommended",
    "overrides": [
      {
        "files": [
          "assets/**/*.js",
          "**/*.md/*.js"
        ],
        "extends": "plugin:prettier/recommended"
      },
      {
        "files": "**/*.md",
        "processor": "markdown/markdown"
      }
    ]
  },
  "stylelint": {
    "extends": [
      "stylelint-config-standard-scss",
      "stylelint-config-prettier-scss"
    ]
  }
}
